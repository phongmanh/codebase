<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chart_white_blur_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/chart_white_background"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/info_icon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/chart_title"
                android:textColor="@color/chart_main_color"
                android:textSize="@dimen/chart_toolbar_title"
                android:textStyle="bold" />

        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:paddingTop="@dimen/dm_5"
        android:weightSum="3"
        tools:context=".presentation.fragments.GoldPriceFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/chart_white_background"
            android:paddingLeft="@dimen/dm_20">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textColor="@color/chart_main_color"
                android:paddingRight="@dimen/dm_10"
                android:textSize="@dimen/chart_day_text_size"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dayOfWeekTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/dayTextView"
                android:layout_toRightOf="@id/dayTextView"
                android:paddingTop="@dimen/dm_10"
                android:text="Thursday"
                android:textColor="@color/chart_main_color"
                android:textSize="@dimen/chart_medium_text_size"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/monthAndYearTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dayOfWeekTextView"
                android:layout_toEndOf="@id/dayTextView"
                android:layout_toRightOf="@id/dayTextView"
                android:gravity="top"
                android:text="June 2021"
                android:textColor="@color/chart_main_color"
                android:textSize="@dimen/chart_medium_text_size" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/chart_white_background">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dataContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/chart_white_blur_background"
            android:paddingLeft="@dimen/dm_20"
            android:paddingTop="@dimen/dm_10"
            android:paddingRight="@dimen/dm_20"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/chart_white_background"
                android:paddingTop="@dimen/dm_10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/noDataContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dm_20"
            android:paddingTop="@dimen/dm_10"
            android:paddingRight="@dimen/dm_20"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/chart_main_color"
                android:textSize="@dimen/chart_normal_text_size"
                android:text="@string/no_internet_inform"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/refreshButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/refresh_margin_top"
                android:gravity="center"
                android:text="@string/refresh_label"
                app:backgroundTint="@color/chart_main_color" />

        </LinearLayout>


    </LinearLayout>

    <include
        layout="@layout/progress_bar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />

</FrameLayout>
